# Backblaze B2 S3-compatible storage
BACKBLAZE_BUCKET_NAME=your-bucket-name
BACKBLAZE_KEY_ID=your-key-id
BACKBLAZE_APPLICATION_KEY=your-application-key
BACKBLAZE_ENDPOINT_URL=https://s3.us-east-005.backblazeb2.com

# Webhook configuration
WEBHOOK_URL=https://your-webhook-endpoint.com/api/webhooks/python-render

# TTS provider configuration
TTS_PROVIDER=kokoro  # Options: piper | kokoro

# Piper TTS configuration
PIPER_BIN_PATH=/usr/local/bin/piper
PIPER_MODEL_PATH=/usr/local/share/piper/en_US-lessac-medium.onnx
PIPER_THREADS=2

# Kokoro TTS configuration
KOKORO_MODEL_PATH=/usr/local/share/kokoro/kokoro-v1.0.onnx
KOKORO_VOICES_PATH=/usr/local/share/kokoro/voices/voices-v1.0.bin
KOKORO_SPEAKER=af_bella
KOKORO_THREADS=2

# Job concurrency settings
MAX_CONCURRENT_JOBS=3

# S3 upload path prefixes
S3_VOICE_PREFIX=uploads/voiceovers
S3_SUBTITLE_PREFIX=uploads/subtitles
S3_VIDEO_PREFIX=uploads/renders
S3_THUMBNAIL_PREFIX=uploads/thumbnails

# Thumbnail provider configuration
THUMBNAIL_PROVIDER=frame  # Options: frame | cloudflare

# Cloudflare Workers AI configuration (required if THUMBNAIL_PROVIDER=cloudflare)
# Get these from: Cloudflare Dashboard > Workers & Pages > Overview (Account ID on right side)
# Create API token at: My Profile > API Tokens > Create Token > Workers AI template
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# Signed URL expiration (seconds)
S3_SIGNED_URL_EXPIRATION_SECONDS=3600